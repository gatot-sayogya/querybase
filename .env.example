# QueryBase Environment Variables Example
# Copy this file to .env and fill in your values

# ============================================================================
# Server Configuration
# ============================================================================
SERVER_PORT=8080
SERVER_MODE=debug
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# ============================================================================
# Database Configuration (Primary PostgreSQL)
# ============================================================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=querybase
DATABASE_PASSWORD=querybase
DATABASE_NAME=querybase
DATABASE_SSLMODE=disable

# ============================================================================
# Redis Configuration (for background jobs)
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# JWT Configuration
# ============================================================================
# IMPORTANT: Change this to a strong random string in production!
# Generate with: openssl rand -base64 32
JWT_SECRET=change-this-secret-in-production-min-32-characters
JWT_EXPIRE_HOURS=24h
JWT_ISSUER=querybase

# ============================================================================
# Encryption Key (for data source passwords)
# ============================================================================
# IMPORTANT: Change this to a strong random string in production!
# This key is used to encrypt/decrypt data source passwords
# Generate with: openssl rand -base64 32
ENCRYPTION_KEY=change-this-encryption-key-in-production

# ============================================================================
# Google Chat Integration (Optional)
# ============================================================================
# Default webhook URL for notifications (can be overridden per data source)
GOOGLE_CHAT_WEBHOOK_URL=

# ============================================================================
# Query Configuration
# ============================================================================
# Query result cache TTL (time to live)
QUERY_CACHE_TTL=24h

# Maximum query execution time (seconds)
MAX_QUERY_EXECUTION_TIME=300

# Maximum rows returned per query
MAX_QUERY_ROWS=10000

# ============================================================================
# Application Settings
# ============================================================================
# Application environment (development, staging, production)
APP_ENV=development

# Log level (debug, info, warn, error)
LOG_LEVEL=debug

# Enable/disable debug mode
DEBUG=true

# ============================================================================
# CORS Configuration (TODO)
# ============================================================================
# Allowed origins for CORS (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ============================================================================
# Rate Limiting (TODO)
# ============================================================================
# Requests per minute per user
RATE_LIMIT_RPM=100

# ============================================================================
# Feature Flags
# ============================================================================
# Enable background worker
ENABLE_WORKER=true

# Enable query result caching
ENABLE_QUERY_CACHE=true

# Enable Google Chat notifications
ENABLE_NOTIFICATIONS=true
